{
  "compilerOptions": {
    "composite": true,
    "target": "es2018",
    "module": "commonjs",
    "strict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true
  }
}
